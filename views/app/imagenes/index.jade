extends ../../layout.jade
block contenido 
    div(class="container top-space")
        a(href="/app/imagenes/new")
            input(type="button" value="New" class="btn btn-info pull-right")
        h1 Mis Im√°genes
        for imagen in imagenes
            .white.border.tr.large-padin
                .row
                    .col-md-10
                        h2=imagen.title
                        a(href="/app/imagenes/#{imagen._id}")
                            img(src="/public/imagenes/#{imagen._id}.#{imagen.extension}" class="main-img")
                    .col-md-2
                        a(href="/app/imagenes/#{imagen._id}/edit",class="right-space") Editar
                        form(action="/app/imagenes/#{imagen._id}?_method=DELETE", class="link", method="POST")
                            input(type="submit" value="Eliminar")
                         
               